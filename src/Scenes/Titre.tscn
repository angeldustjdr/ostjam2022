script/source = "extends Node2D

var keyboard = \"wasd\"
func _ready():
	Global.set_keyboard(keyboard)

func _process(delta):
	for n in get_tree().get_nodes_in_group(\"key\"):
		n.visible = false
	if keyboard == \"wasd\":
		$W.visible = true
		$A.visible = true
	if keyboard == \"qzsd\":
		$Q.visible = true
		$Z.visible = true
	if Input.is_action_just_pressed(\"space_switch\"):
		if keyboard==\"qzsd\":
			self.keyboard = \"wasd\"
			Global.set_keyboard(keyboard)
		else:
			self.keyboard = \"qzsd\"
			Global.set_keyboard(keyboard)
	if Input.is_action_just_pressed(\"enter_begin\"):
		get_tree().change_scene(\"res://Scenes/Main.tscn\")
"

